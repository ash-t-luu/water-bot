{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true,
    },
    "include": ["./**/**/*.ts", "./*.ts"],
    "exclude": ["node_modules", "dist"],
}